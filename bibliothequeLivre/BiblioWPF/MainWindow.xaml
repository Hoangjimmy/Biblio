<Window x:Class="BiblioWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:BusinessLayer"
        Title="BiblioManager" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate x:Key="Auteur">
            <StackPanel>
                <TextBlock Text="{Binding Path=Nom}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock>BiblioManager</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button>Emprunts</Button>
                <Button>Auteurs</Button>
                <Button>Livres > 5</Button>
                <Button>Livres > 5 et prix Goncourt</Button>
                <Button>Exporter</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Name="mStackPanelContenu">
            
        </StackPanel>
    </DockPanel>
</Window>
