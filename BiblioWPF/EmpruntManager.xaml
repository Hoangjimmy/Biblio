<Window x:Class="BiblioWPF.EmpruntManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmpruntManager" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="0,-5,0,5">Emprunteur</Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0,19"/>
        <Label Grid.Row="1">Livre</Label>
        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0,19"/>
        <Label Grid.Row="2" Grid.Column="0">Du</Label>
        <DatePicker Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="20"></DatePicker>
    </Grid>
</Window>
